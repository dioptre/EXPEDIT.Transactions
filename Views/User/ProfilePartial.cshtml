@model EXPEDIT.Transactions.ViewModels.AccountViewModel
<h2>Partnership Status</h2>
<h4 style="color:black;">@(AuthorizedFor(EXPEDIT.Transactions.Permissions.Partner) ? "Partner" : "Member Only")</h4>
<h2>Contact Details</h2>
<p><a class="btn btn-small" href="/Users/Account/ChangePassword"><i class="glyphicon icon-lock"></i>&nbsp;<span>Change Password</span></a></p>
<p><strong>@Model.Contact.Title @Model.Contact.Firstname @Model.Contact.Surname (@Model.Contact.Username)</strong></p>
<div class="editor-label">
    @Html.LabelFor(x => x.Contact.DefaultEmail)
</div>
<div class="editor-field">
    @Html.TextBoxFor(x => x.Contact.DefaultEmail, new { @readonly = true })
</div>
<div class="editor-label">
    @Html.LabelFor(x => x.Contact.DefaultMobile)
</div>
<div class="editor-field">
   @Html.TextBoxFor(x => x.Contact.DefaultMobile, new { @readonly = true })
</div>
<h3>Addresses</h3>
<table class="table table-striped">
<thead>
<tr><th></th></tr>
</thead>
<tbody>
    @foreach (var p in Model.Contact.ContactAddresses) {
<tr>   
<td>
    <p style="text-transform:uppercase">@p.Street @p.Extended @p.City @p.State @p.Country @p.Postcode</p>
    <p>@p.Email @p.Mobile @p.Phone</p>
</td>
</tr>
}
</tbody>
</table>