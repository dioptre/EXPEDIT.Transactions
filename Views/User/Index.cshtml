@model EXPEDIT.Transactions.ViewModels.ProductsViewModel

@{
    Style.Require("Transactions");
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    Layout.Title = T("Products").ToString();
}

@*@using (Html.BeginFormAntiForgeryPost(Url.Action(string.Format("{0}", ViewData["TransparentRedirectUrl"]), "User", new { area = "EXPEDIT.Transactions", Controller = "User", Action = "Index" }), FormMethod.Post, new { id = "payment-form", @class = "payment-form" }))*@
<table class="table table-striped">
<thead>
<tr><th width="75px"></th><th></th></tr>
</thead>
<tbody>
    @foreach (var p in Model.Products) {
<tr>
<td><img src="@p.Thumbnail" alt="" style="padding: 4px; line-height: 19.5px; border: 1px solid #ddd;" width="60" height="60"></td>
<td>
<h2>@p.Title</h2>
<p style="font-size: 17.5px;font-weight: normal;line-height: 1;color: #999;">@p.Subtitle</p>
<p>@Html.Raw(p.HTML)</p>
<p><a href="/share/go/@p.UrlInternal">...more information</a></p>
<p style="text-align: right;">@Html.Raw(string.Format("{0} {1:f2} {2} ({3})",p.CurrencyPrefix,p.PricePerUnit,p.CurrencyPostfix, p.ProductUnitName))</p>
<p style="text-align: right;">@Html.Raw(p.PricePerUnit == 0 && p.FreeDownloadID.HasValue ? 
        string.Format("<button class=\"btn btn-info\" onclick=\"window.location.href='{0}'\">Free Download</button></p>", Url.Action("download", new { area="EXPEDIT.Transactions", controller="User", id=p.FreeDownloadID, @ref=p.ProductID})  ) 
    :   string.Format("<button class=\"btn btn-info\" onclick=\"window.location.href='{0}'\">Buy</button></p>", Url.Action("Buy",new { area="EXPEDIT.Transactions", controller="User", id=p.SupplierModelID, @ref=p.ProductID}))
    )
    
</p>
<br>
<p>Last Updated: @p.LastUpdated | Author: <a href="/share/go/@p.UrlExternal">@p.Manufacturer</a>@* | Downloads: @p.Downloads | Rating: @string.Format("{0:f2}", p.Rating)/@string.Format("{0:f2}", p.RatingScale)*@</p>
</td>
</tr>
}
</tbody>
</table>